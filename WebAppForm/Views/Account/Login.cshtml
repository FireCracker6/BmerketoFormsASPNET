@model LoginViewModel
@{
	ViewData["Title"] = "Logga in";
}


<div class="d-flex justify-content-center">
	<div class="col-6">
		<form method="post" novalidate>

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		
			<div class="mb-3">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for="Email" class="form-control box-shadow-none" id="email-input" />
				<small>
					<span asp-validation-for="Email" class="text-danger"></span>
				</small>

				<small>
					<span id="email-validation-error" class="text-danger"></span>
				</small>
			</div>
			<div class="mb-3">
				<label asp-for="Password" class="form-label"></label>
				<input asp-for="Password" class="form-control" id="password-input" />
				<small>
					<span asp-validation-for="Password" class="text-danger"></span>
				</small>

				<small>
					<span id="password-validation-error" class="text-danger"></span>
				</small>
			</div>
		
			<div class="d-grid">
				<button type="submit" class="btn btn-success mt-2 ">LOGGA IN</button>
			</div>
		</form>
		<div class="validation-summary-errors"></div> <!-- Move this outside the form element -->
	</div>
</div>